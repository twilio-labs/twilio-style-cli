{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "types" : [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__mocks__/*",
    "**/__tests__/*",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "lib"
  ]
}
